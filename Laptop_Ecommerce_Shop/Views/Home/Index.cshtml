@model IEnumerable<Laptop_Ecommerce_Shop.ProductItem>

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="~/assets/css/style.css" rel="stylesheet">
    <title>E-commerce Laptops</title>

    <style>
        body {
            background-image: url("../assets/images/bg.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            background-position: center top;
        }

        .btnProducts {
            color: rgba(255, 255, 255, 1);
            background-color: rgba(167, 78, 36, 0.74);
            border-color: rgba(255, 255, 255, 0.74);
            margin-top: 0.5em;
        }
    </style>
</head>
<body>
    @Html.Raw(TempData["msg"])
    <main>
        <header class="mb-auto">
            <div>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link" href="/Home/Index">Home</a>
                    @if (Request.Cookies["CustomerID"] == null)
                    {
                        <a class="nav-link" href="/Home/CustomerSignUp">Sign Up</a>
                        <a class="nav-link" href="/Home/CustomerLogin">login</a>

                    }
                    else
                    {
                        <a class="nav-link" href="/Customer/ShowOrders">My Orders</a>
                        <a class="nav-link" href="/Home/Logout">Logout</a>
                    }


                </nav>
            </div>
            <div class="cartNums">
                <a href="/Customer/CustomerCart" style="text-decoration: none;"><img style="width: 35px;" src="~/assets/images/shopping-cart.png" alt=""><span style="color:black">  @TempData["CartNum"] </span></a>
            </div>
        </header>


        <section class="py-5 text-center container" style="margin-top:-80px">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">E-commerce Laptops</h1>
                    <p class="lead text-muted" style="color: white !important; font-weight: 350;">Here you find all the premium laptops you need and you can buy them in a smooth and safe way without any hassles with a two-year warranty.</p>
                </div>
            </div>
        </section>

        <div class="album py-5 parentContainer">
            <div class="container" id="containerDiv">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="card shadow-sm">

                                @{
                                    var base64 = Convert.ToBase64String(item.image);
                                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                                }
                                <img src='@imgsrc' class="bd-placeholder-img card-img-top" style="width:80%; height:200px" />
                                <div class="card-body">
                                    <p class="card-text"> @Html.DisplayFor(modelItem => item.ProductName)</p>
                                    <small class="text-muted"> @Html.DisplayFor(modelItem => item.Brand)</small>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            @*<a href="/Customer/ViewProduct/@item.ProductID" class="btn btn-sm btn-outline-secondary btnProducts">View</a>*@
                                            <a href="/Customer/AddToCart/@item.ProductID" class="btn btn-sm btn-outline-secondary btnProducts">Add to Cart</a>
                                        </div>
                                        <small class="text-muted"> @Html.DisplayFor(modelItem => item.Price) $</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>


            </div>
        </div>
        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2021 E-commerce Laptops</p>

        </footer>
    </main>



</body>
</html>
