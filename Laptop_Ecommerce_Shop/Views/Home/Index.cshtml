<body class="homepage_parallax" data-spy="scroll" data-target=".navbar-fixed-top" data-offset="100">
    <!-- Start Intro -->
    <section id="home" class="parallax-bg" style="background-image: url(../assets/img/bg1.jpg)" data-stellar-background-ratio="0.5">
        <!-- Section Title -->
