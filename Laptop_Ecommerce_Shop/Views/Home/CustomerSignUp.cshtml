@model Laptop_Ecommerce_Shop.Customer
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>

    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">*@

    <link href="~/assets/css/style.css" rel="stylesheet">
    <title>Sign Up</title>
    <!-- CSS -->
    <style>
        body {
            text-align: center;
            background-image: url("../assets/images/bg.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            background-position: center top;
        }

        .theForm label {
            font-weight: bold;
            font-size: 1.2em;
        }

        .theForm {
            margin: 0 auto;
            height:360px;
        }

        .forget {
            background-color: rgba(255, 255, 255, 0);
            margin-left: 17em;
            margin-top: -16em !important;
        }
       
    </style>

</head>

<body>

    <section class="py-5 text-center container" style="margin-top:50px">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">E-commerce Laptops</h1>
            </div>
        </div>
    </section>
    <br />
    @using (Html.BeginForm("CustomerSignUp", "Home", FormMethod.Post, new { @class = "theForm" }))
    {
        @Html.AntiForgeryToken()
        <label>
            Full Name
            @Html.TextBoxFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
            @*<input type="text" id="username" required>*@
        </label>
        @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "lblMsg" })
        <br />
        <label>
            Email Address
            @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @*<input type="text" id="username" required>*@
        </label>
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "lblMsg" })
        <br />
        <label>
            Password
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
        </label>
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "lblMsg" })

        @*<br />
            <label>
                Password
                @Html.PasswordFor(model => model.ConfirmPassowrd, new { @class = "form-control" })
            </label>
            @Html.ValidationMessageFor(model => model.ConfirmPassowrd, "", new { @class = "lblMsg" })*@

        <p><button type="submit">Sign Up</button></p>

        if (TempData["Message"] != null)
        {
            <span class="lblMsg">@TempData["Message"].ToString()</span>
        }

    }
    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1" style="margin-top:120px">&copy; 2021 E-commerce Laptops</p>
    </footer>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>

</html>